
#Functions can acceps parameters
#The first parameter is stored in $1, second is $2, and so on
#$@ contains all of the parameters


# -- Positional Parameter --

function hello() {
	for NAME in $@
	do
		echo "Hello $NAME"
	done
}
hello Mera Mers Merac

#Results below:
#Hello Mera
#Hello Mers
#Hello Merac